<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="../img/2023_Facebook_icon.svg.webp" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form class="from-login" action="/user/store" method="post">
                    <div class="input-group mb-3">
                        <input type="text" name="name" id="name" class=" input_name" value="" placeholder="Tên của bạn" required>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" name="email" id="email" class=" input_user" value="" placeholder="Email của bạn" required> 
                    </div>
                    <div class="input-group mb-2">
                        <input type="password" name="pass" id="pass" class="input_pass" value="" placeholder="Mật khẩu" required>
                    </div>
                    <div class="input-group mb-2">
                        <input type="password" id="confirm_password" name="confirm_pass" class="input_pass" value="" placeholder="Nhặp lại mật khẩu" required>
                    </div>
                <div class="d-flex justify-content-center mt-3 login_container">
                    <button type="submit" name="button"  class="login_btn_button">Đăng ký</button>
                </div>
            </form>
        </div>
        <div class="d-flex justify-content-center links">
            <a href="/user">Đăng nhập</a>
            <hr>
        </div>      
        <div class="d-flex justify-content-center mt-3 sign_container">
        </div>
    </div>
</div>
</div>
